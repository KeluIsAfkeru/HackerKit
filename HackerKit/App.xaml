<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HackerKit.App">
    <Application.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="TextColor" Value="#495F6E" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="HorizontalOptions" Value="Start" />
            <Setter Property="BorderWidth" Value="0" />
            <Setter Property="Padding" Value="0" />
        </Style>
        <Color x:Key="InitialBackgroundColor">#E3F2FD</Color>
        <Color x:Key="SelectedBackgroundColor">#1976D2</Color>
        <Color x:Key="InitialTextColor">#333333</Color>
        <Color x:Key="SelectedTextColor">#FFFFFF</Color>
    </Application.Resources>

</Application>